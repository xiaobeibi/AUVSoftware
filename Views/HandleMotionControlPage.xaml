                                        <RotateTransform Angle="-45"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Button.RenderTransform>
                            </Button>
                            <Button Command="{Binding BackwardTiltButton}" Content="&#xe62d;" Style="{DynamicResource ButtonStyleForMimic}" RenderTransformOrigin="0.5,0.5">
                                <hc:Poptip.Instance>
                                    <hc:Poptip Content="后倾" PlacementType="Bottom" FontSize="18" FontWeight="Bold" Height="33" Width="57"/>
                                </hc:Poptip.Instance>
                                <Button.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-45"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Button.RenderTransform>
                            </Button>
                        </UniformGrid>
                    </Border>
                </Grid>
            </Border>

        </Grid>

        <!--遥感区域-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.1*"/>
                <ColumnDefinition Width="2.4*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Slider IsHitTestVisible="False" Height="0" Width="0" Name="LeftMotorSlider" hc:TipElement.Placement="Top" IsSnapToTickEnabled="True" Minimum="-8" Maximum="8" Value="{Binding LeftMotorValue}" TickFrequency="1" TickPlacement="BottomRight"/>
                <Process:VertiProcessFull Width="190" Margin="0 0 0 0" Value="{Binding ElementName=LeftMotorSlider, Path=Value}" Limit="8" Precision="0" FontWeight="Bold"/>
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid>
                    <Grid.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </Grid.Resources>
                    <ToggleButton Name="RudderPlate" IsChecked="False" Margin="0,10" Cursor="Hand" HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{StaticResource ToggleButtonSwitch}" Checked="RudderPlate_Checked" Unchecked="RudderPlate_Unchecked"/>
                </Grid>

                <Grid Name="RudderPlateGrid" Visibility="Hidden">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>

                    <Process:ArchProcess Grid.Row="0" HorizontalAlignment="Left" Height="190" VerticalAlignment="Top" Width="140" Limit="9" Text="左舵板" Precision="0" Value="{Binding ElementName=LeftRudderPanelDisplay, Path=Text}" ZeroPoint="0" FontSize="16" FontWeight="Bold"/>
                    <Process:ArchProcess Grid.Row="0" HorizontalAlignment="Right" Height="190" VerticalAlignment="Top" Width="140" Limit="9" Text="右舵板" Precision="0" Value="{Binding ElementName=RightRudderPanelDisplay, Path=Text}" ZeroPoint="0" FontSize="16" FontWeight="Bold"/>
                    
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Name="RudderPanelMinusButton" Command="" Width="35" Height="35" Content="&#xe63c;" FontSize="24" FontWeight="Bold" Style="{DynamicResource ButtonStyleForMimic}" RenderTransformOrigin="0.5,0.5" Cursor="Hand" Click="RudderPanelMinusButton_Click"/>
                        <Button Command="{Binding RudderBoardSendCommand}" Content="发送" Style="{StaticResource CopyAppleUIButton}" Background="{StaticResource DefaultBackground}" FontWeight="Bold" FontSize="20" Cursor="Hand" Height="30" Width="50"/>
                        <Button Name="RudderPanelPlusButton" Command="" Width="35" Height="35" Content="&#xe63f;" FontSize="24" FontWeight="Bold" Style="{DynamicResource ButtonStyleForMimic}" RenderTransformOrigin="0.5,0.5" Cursor="Hand" Click="RudderPanelPlusButton_Click"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10 15 0 0">
                            <Button Name="LeftRudderPanelMinusButton" Command="" Width="35" Height="35" Content="&#xe633;" FontSize="24" FontWeight="Bold" Style="{DynamicResource ButtonStyleForMimic}" RenderTransformOrigin="0.5,0.5" Cursor="Hand" Click="LeftRudderPanelMinusButton_Click"/>
                            <Button Command="{Binding LeftRudderBoardSendCommand}" Content="发送" Style="{StaticResource CopyAppleUIButton}" Background="{StaticResource DefaultBackground}" FontWeight="Bold" FontSize="20" Cursor="Hand" Height="30" Width="50"/>
                            <Button Name="LeftRudderPanelPlusButton" Command="" Width="35" Height="35" Content="&#xe632;" FontSize="24" FontWeight="Bold" Style="{DynamicResource ButtonStyleForMimic}" RenderTransformOrigin="0.5,0.5" Cursor="Hand" Click="LeftRudderPanelPlusButton_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 15 0 0">
                            <Button Name="RightRudderPanelMinusButton" Command="" Width="35" Height="35" Content="&#xe633;" FontSize="24" FontWeight="Bold" Style="{DynamicResource ButtonStyleForMimic}" RenderTransformOrigin="0.5,0.5" Cursor="Hand" Click="RightRudderPanelMinusButton_Click"/>
                            <Button Command="{Binding RightRudderBoardSendCommand}" Content="发送" Style="{StaticResource CopyAppleUIButton}" Background="{StaticResource DefaultBackground}" FontWeight="Bold" FontSize="20" Cursor="Hand" Height="30" Width="50"/>
                            <Button Name="RightRudderPanelPlusButton" Command="" Width="35" Height="35" Content="&#xe632;" FontSize="24" FontWeight="Bold" Style="{DynamicResource ButtonStyleForMimic}" RenderTransformOrigin="0.5,0.5" Cursor="Hand" Click="RightRudderPanelPlusButton_Click"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Name="LeftRudderPanelDisplay" Text="{Binding LeftRudderBoardBindingText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden"/>
                    <TextBlock Name="RightRudderPanelDisplay" Text="{Binding RightRudderBoardBindingText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden"/>

                </Grid>
                
                <Border Name="RudderPlateBorder" BorderThickness="4" BorderBrush="#FF1DCDC9" Width="220" Height="220" CornerRadius="30" Margin="40 10 40 20">
                    <Canvas Background="Transparent">
                        <Ellipse Canvas.Top="{Binding YAxisValue}" Canvas.Left="{Binding XAxisValue}" Height="5" Width="5" Cursor="Hand">
                            <Ellipse.Fill>
                                <RadialGradientBrush GradientOrigin="0.2,0.8" RadiusX="0.75" RadiusY="0.75">
                                    <RadialGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"></RotateTransform>
                                        </TransformGroup>
                                    </RadialGradientBrush.RelativeTransform>
                                    <GradientStop Color="#FFFFFF" Offset="0"></GradientStop>
                                    <GradientStop Color="#444444" Offset="0.66"></GradientStop>
                                    <GradientStop Color="#999999" Offset="1"></GradientStop>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Path Stroke="Red" StrokeThickness="1">
                            <Path.Data>
                                <EllipseGeometry Center="106,106" RadiusX="106" RadiusY="106"/>
                            </Path.Data>
                        </Path>
                        <Path Stroke="#FF00FF71" StrokeThickness="1">
                            <Path.Data>
                                <EllipseGeometry Center="106,106" RadiusX="32" RadiusY="32"/>
                            </Path.Data>
                        </Path>
                        <Path Stroke="#FFABFF00" StrokeThickness="1">
                            <Path.Data>
                                <EllipseGeometry Center="106,106" RadiusX="53" RadiusY="53"/>
                            </Path.Data>
                        </Path>
                        <Path Stroke="#FFFFEE00" StrokeThickness="1">
                            <Path.Data>
                                <EllipseGeometry Center="106,106" RadiusX="74" RadiusY="74"/>
                            </Path.Data>
                        </Path>
                        <Path Stroke="#FFFF8000" StrokeThickness="1">
                            <Path.Data>
                                <EllipseGeometry Center="106,106" RadiusX="95" RadiusY="95"/>
                            </Path.Data>
                        </Path>

                        <Line X1="32" Y1="32" X2="180" Y2="180" Stroke="#FF0068FF" StrokeThickness="1"/>
                        <Line X1="32" Y1="180" X2="180" Y2="32" Stroke="#FF0068FF" StrokeThickness="1"/>
                        <Line X1="4" Y1="132" X2="208" Y2="80" Stroke="#FF0068FF" StrokeThickness="1"/>
                        <Line X1="4" Y1="80" X2="208" Y2="132" Stroke="#FF0068FF" StrokeThickness="1"/>
                        <Line X1="80" Y1="4" X2="132" Y2="208" Stroke="#FF0068FF" StrokeThickness="1"/>
                        <Line X1="132" Y1="4" X2="80" Y2="208" Stroke="#FF0068FF" StrokeThickness="1"/>

                    </Canvas>
                </Border>
            </Grid>

            <StackPanel Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Slider IsHitTestVisible="False" Height="0" Width="0" Name="RightMotorSlider" hc:TipElement.Placement="Top" IsSnapToTickEnabled="True" Minimum="-8" Maximum="8" Value="{Binding RightMotorValue}" TickFrequency="1" TickPlacement="BottomRight"/>
                <Process:VertiProcessFull Width="190" Margin="0 0 0 0" Value="{Binding ElementName=RightMotorSlider, Path=Value}" Limit="8" Precision="0" FontWeight="Bold"/>
            </StackPanel>

            <Grid Grid.Column="2">
                <Border Margin="10">
                    <Process:RotateProcessHalf Value="{Binding ElementName=RotateProcessSlider, Path=Value}" HorizontalAlignment="Center" Height="250" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Interval="1" Unit=""/>
                </Border>
                <Slider IsHitTestVisible="False" Height="0" Width="0" Name="RotateProcessSlider" hc:TipElement.Placement="Top" IsSnapToTickEnabled="True" Minimum="0" Maximum="5" Value="{Binding AuvSpeedText}" TickFrequency="1" TickPlacement="BottomRight"/>
            </Grid>

            
        </Grid>
    </Grid>
</Page>
